<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/comm_head"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"/>
        <TextView 
            android:id="@+id/comm_name"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_normal"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/comm_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/comm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_small"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">
        <TextView 
            android:id="@+id/comm_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="20dp"
            android:lineSpacingExtra="3dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:textColor="@color/title_text"
            android:textSize="@dimen/text_normal"
            android:layout_marginRight="45dp"/>
        <TextView 
            android:id="@+id/re_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_normal"
            android:text="@string/re_comm"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
	<include 
	    layout="@layout/line"/>
</LinearLayout>