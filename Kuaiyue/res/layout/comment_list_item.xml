<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp">
        <ImageView 
            android:id="@+id/commt_head"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:src="@drawable/default1"
            android:layout_width="@dimen/head_size"
            android:layout_height="@dimen/head_size"/>
        <TextView 
            android:id="@+id/commt_name"
            android:textColor="@color/blue"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/commt_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView 
            android:id="@+id/commt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_small"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
	<TextView 
	    android:id="@+id/commt_text"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/title_text"
	    android:textSize="@dimen/text_normal"
	    android:layout_marginLeft="3dp"
	    android:lineSpacingExtra="3dp"
	    android:padding="5dp"/>
	<TextView 
	    android:id="@+id/commt_retext"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:layout_marginBottom="5dp"
	    android:paddingLeft="10dp"
	    android:paddingTop="15dp"
	    android:paddingRight="10dp"
	    android:paddingBottom="10dp"
	    android:lineSpacingExtra="3dp"
	    android:textColor="@color/title_text"
	    android:textSize="@dimen/text_normal"
	    android:background="@drawable/background"/>
	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:layout_marginBottom="8dp"
	    android:orientation="vertical">
	    <View 
	        android:background="@color/line_top"
	        android:layout_width="fill_parent"
	        android:layout_height="0.5dp"/>
	    <View 
	        android:background="@color/line_bottom"
	        android:layout_width="fill_parent"
	        android:layout_height="0.5dp"/>
	</LinearLayout>
</LinearLayout>