<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/detail_title"
     android:layout_width="fill_parent"
     android:layout_height="@dimen/title_height"
     android:background="@drawable/actionebar02">
    <ImageView
        android:id="@+id/pic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/back02" />
    <FrameLayout 
        android:id="@+id/head_frame"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
	    android:layout_marginTop="5dp"
	    android:layout_marginRight="5dp"
	    android:layout_marginBottom="5dp">
     	<ImageView 
	        android:id="@+id/title_image"
	        android:src="@drawable/ic_launcher"
	        android:layout_gravity="center_vertical"
	        android:layout_width="@dimen/head_size"
	        android:layout_height="@dimen/head_size"
	        android:scaleType="fitXY"/>
        <ImageView 
            android:id="@+id/head_v"
            android:visibility="gone"
            android:src="@drawable/v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"/>
   </FrameLayout>
   <TextView 
        android:id="@+id/title_name"
        android:text="@string/user_name"
        android:textColor="@color/title_text"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"/>

</LinearLayout>
