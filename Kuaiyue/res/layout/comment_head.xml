<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
	    android:id="@+id/home_content"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="10dp"
	    android:paddingTop="5dp"
	    android:paddingRight="10dp"
	    android:paddingBottom="5dp"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/content_text"
	        android:autoLink = "all"
	        android:lineSpacingExtra="3dp"
	        android:textColorLink="@color/blue"
	        android:focusable="true"
	        android:focusableInTouchMode="true"
	        android:layout_width="fill_parent"
	        android:textColor="@color/title_text"
	        android:textSize="@dimen/text_normal"
	        android:layout_height="wrap_content"/>
	    <com.aisidi.kuaiyue.component.ImageLayout
	        android:id="@+id/imageLayout"
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/comm_recontent"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@drawable/background"
	    android:layout_margin="5dp"
	    android:paddingLeft="10dp"
	    android:paddingTop="15dp"
	    android:paddingRight="10dp"
	    android:paddingBottom="10dp"
	    android:visibility="gone">
	    <TextView 
	        android:id="@+id/recontent_text"
	        android:autoLink = "all"
	        android:linksClickable="true"
	        android:lineSpacingExtra="3dp"
	        android:textColorLink="@color/blue"
	        android:layout_width="fill_parent"
	        android:textColor="@color/title_text"
	        android:textSize="@dimen/text_normal"
	        android:layout_height="wrap_content"/>
	    <com.aisidi.kuaiyue.component.ImageLayout
	        android:id="@+id/re_imageLayout"
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	</LinearLayout>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_margin="5dp"
	    android:layout_height="wrap_content">
	     <TextView
            android:id="@+id/home_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/blue"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textSize="@dimen/text_small"/>
	    <TextView 
	        android:id="@+id/source_text"
	        android:layout_toRightOf="@+id/home_time"
	        android:textColor="@color/title_text"
	        android:textSize="@dimen/text_small"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    <ImageView 
	        android:id="@+id/small_forward"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:src="@drawable/small_forward"
	        android:layout_toLeftOf="@+id/forward"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    <TextView 
	        android:id="@+id/forward"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@+id/small_comments"
	        android:textColor="@color/title_text"
	        android:textSize="@dimen/text_small"/>
	    <ImageView 
	        android:id="@+id/small_comments"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:src="@drawable/small_comments"
	        android:layout_toLeftOf="@+id/comment"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    <TextView 
	        android:id="@+id/comment"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:textColor="@color/title_text"
	        android:textSize="@dimen/text_small"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp"
	    android:orientation="vertical"
	    android:layout_marginBottom="8dp">
	    <View 
	        android:background="@color/line_top"
	        android:layout_width="fill_parent"
	        android:layout_height="0.5dp"/>
	    <View 
	        android:background="@color/line_bottom"
	        android:layout_width="fill_parent"
	        android:layout_height="0.5dp"/>
	</LinearLayout>
</LinearLayout>