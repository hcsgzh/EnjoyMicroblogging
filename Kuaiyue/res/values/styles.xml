<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/loading</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>
    <style name="myProgressBar">
        <item name="android:progressDrawable">@drawable/progress</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
	<style name="main_tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Transparent">    
    <item name="android:windowBackground">@color/alert_bg</item>    
    <item name="android:windowNoTitle">false</item>    
    <item name="android:windowFullscreen">false</item>  
    <item name="android:windowIsTranslucent">true</item>       
    <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>    
  </style> 
    <style name="dialog" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>